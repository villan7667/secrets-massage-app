<%- include("partials/navbar") %>
<section class="edit-secret-section">
  <form action="/edit/<%= secret._id %>" method="POST" class="edit-secret-form">
    <h2>✏️ Edit Your Secret</h2>

    <div class="form-group">
      <label for="secret">Secret Message</label>
      <textarea name="secret" id="secret" required><%= secret.content %></textarea>
    </div>

    <button type="submit" class="btn"> Update Secret</button>
    <a href="/secrets" class="btn btn-cancel">Cancel</a>
  </form>
</section>
